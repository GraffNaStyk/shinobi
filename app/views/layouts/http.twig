<!doctype html>
<html lang="pl">
<head>
  <meta http-equiv="Content-Language" content="pl">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="robots" content="index,follow,all">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="keywords" content="Graff PHP">
  <link rel="shortcut icon" href="{{ img('/storage/public/logo.png') }}" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,600" rel="stylesheet">
  <title>{{ page.title }}</title>
  {{ css|raw }}
  <input type="hidden" name="url" value="{{ url() }}">
</head>
<body class="bg__image" style="background-image: url('../../../storage/public/bg.png')">
<nav class="navbar navbar-expand-lg">
<div class="container p-0">
  <a href="{{ url() }}"> <img class="logo" src="{{ img('/storage/public/logo.png') }}" alt=""> </a>
  <div class="collapse navbar-collapse" id="navbarNav">
    <a class="nav-link" href="{{ url() }}">News</a>
    <a class="nav-link" href="{{ url('/account') }}">Account</a>
    <a class="nav-link" href="{{ url('/highscores') }}">Highscores</a>
    <a class="nav-link" href="{{ url('/items') }}">Items</a>
  </div>
  <div class="socials">
    <img src="{{ img('/storage/public/discord.png') }}" alt="">
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
    <i class="fa fa-bars"></i>
  </button>
</div>
</nav>
{% include('layouts/inc/alert.twig') %}

<main id="main-page-wrapper" class="container">
  {% block content %}
  {% endblock %}
</main>

{% include 'components/modal.twig' %}
<footer class="py-2">
  <div class="container">
    <p class="m-0 footer__title">&copy; Created by Graff {{ "now"|date('Y') }}</p>
  </div>
</footer>
{{ js|raw }}
</body>
</html>
