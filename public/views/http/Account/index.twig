{% extends layout %}
  {% import 'components/form.twig' as form %}
{% block content %}
  <h3 class="text-center mt-3 black-text">Login Account</h3>
  <div class="mt-3 d-flex justify-content-center">
    <form data-action="account/login">
      <div class="form__grid">
        {{ form.input({
          name: 'name',
          label: 'account'
        }) }}
        {{ form.input({
          name: 'password',
          label: 'password',
          type: 'password'
        }) }}
        {{ form.submit({
          value: 'Login',
          class: 'mt-3'
        }) }}
        {{ form.csrf('Account@login') }}
      </div>
    </form>
  </div>
  <div class="d-flex justify-content-center flex-column mt-4">
    <a class="text-center account__action mt-2" href="{{ url('/account/register') }}">Create account</a>
    <a class="text-center account__action mt-2" href="{{ url('/account/lost') }}">Lost account</a>
  </div>
{% endblock %}
